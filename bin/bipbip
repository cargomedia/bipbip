#!/usr/bin/env ruby

$LOAD_PATH.unshift(File.dirname(__FILE__) + '/../lib')
require 'bipbip'
require 'optparse'
require 'net/ping'

name = 'bipbip'
version = Bipbip::VERSION

options = {}
optparse = OptionParser.new do |opts|
  opts.banner = "Usage: #{name} [options]"

  opts.on('-c', '--config PATH', 'Configuration file') do |c|
    options[:config] = c
  end

  opts.on('-v', '--version', 'Version') do |_v|
    puts "#{name} v#{version}"
    exit
  end

  opts.on('-h', '--help', 'Show this help') do |_h|
    puts opts
    exit
  end
end

begin
  optparse.parse!
  unless options[:config]
    puts 'Missing options: config file [-c PATH]'
    exit
  end
rescue OptionParser::InvalidOption, OptionParser::MissingArgument
  puts $ERROR_INFO.to_s
  puts optparse
  exit
end

begin
  until Net::Ping::External.new('8.8.8.8').ping?
    Bipbip.logger.fatal 'No internet connection. Sleeping 5 seconds...'
    sleep 5
  end
  config = Bipbip::Config.factory_from_file(options[:config])
  agent = Bipbip::Agent.new(config)
  agent.run
rescue => e
  Bipbip.logger.fatal e.message + "\n" + e.backtrace.map { |s| "\t#{s}" }.join("\n")
  exit 1
end
